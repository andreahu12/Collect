<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shopping.with.friends.Fragments.Profile"
    android:background="@color/main_blue">

    <ImageView
        android:layout_width="195dp"
        android:layout_height="195dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal|top"
        android:src="@android:mipmap/sym_def_app_icon" />

    <Button
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="@string/profile_followers_button"
        android:id="@+id/Following_Profile_Button"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/selector_button_pink"
        />

    <Button
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:text="@string/profile_following_button"
        android:id="@+id/button"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/selector_button_pink"
        />

</FrameLayout>